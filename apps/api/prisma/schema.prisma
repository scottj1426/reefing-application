generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  profileImageKey String? @map("profile_image_key")
  username  String?    @unique
  auth0Id   String     @unique @map("auth0_id")
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")
  aquariums Aquarium[]

  @@map("users")
}

model Aquarium {
  id          String      @id @default(cuid())
  name        String
  type        String      // "reef", "freshwater", "saltwater"
  volume      Int         // gallons
  description String?
  userId      String      @map("user_id")
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  equipment   Equipment[]
  corals      Coral[]
  photos      AquariumPhoto[]
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  @@map("aquariums")
}

model AquariumPhoto {
  id         String   @id @default(cuid())
  imageKey   String   @map("image_key")
  aquariumId String   @map("aquarium_id")
  aquarium   Aquarium @relation(fields: [aquariumId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("aquarium_photos")
}

model Equipment {
  id         String   @id @default(cuid())
  name       String
  type       String   // "filter", "pump", "light", "heater", "skimmer", "wavemaker", "other"
  brand      String?
  notes      String?
  aquariumId String   @map("aquarium_id")
  aquarium   Aquarium @relation(fields: [aquariumId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("equipment")
}

model Coral {
  id              String    @id @default(cuid())
  species         String
  placement       String?
  color           String?
  size            String?
  acquisitionDate DateTime? @map("acquisition_date")
  source          String?
  notes           String?
  imageKey        String?   @map("image_key")
  aquariumId      String    @map("aquarium_id")
  aquarium        Aquarium  @relation(fields: [aquariumId], references: [id], onDelete: Cascade)
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@map("corals")
}
